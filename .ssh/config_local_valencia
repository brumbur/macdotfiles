Host github
    User brumbur
    HostName github.com
    IdentityFile ~/.ssh/id_ecdsa_sk_github

Host gitlab
    User brumbur
    HostName gitlab.com
    Port 22
    IdentityFile ~/.ssh/id_ed25519
    AddKeysToAgent yes
    IgnoreUnknown UseKeychain

Host lng lebenswelt-ng
    User root
    HostName 192.168.1.1
    Port 11372
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes
    AddKeysToAgent yes

Host mygitlab
  IdentityFile ~/.ssh/gitlab.pub
  IdentitiesOnly yes
  ForwardAgent no
  SendEnv GIT_PROTOCOL
  ProxyJump none

