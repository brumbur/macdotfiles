# linux -> chmod 700 for the pub keys; 600 for private; 640 for the .ssh dir
Host *
    AddKeysToAgent yes
    ControlMaster auto
    ControlPath ~/.ssh/%r@%h:%p
    ControlPersist yes
    Compression yes

